#!/bin/bash -eu

argv0=install

usage() {
  printf >&2 'usage: %s\n' "$argv0"
  exit 1
}

# Option parsing
opt_short=''
opt_long=''

if opts=$(getopt -o "$opt_short" -l "$opt_long" -n "$argv0" -- "$@"); then
  eval set -- "$opts"
else
  usage
fi

while true; do
  case $1 in
  --)
    shift
    break
    ;;
  *)
    usage
    ;;
  esac
  shift
done

aur sync --sign "$@"
sudo pacman -Sy "$@"
